LANGUAGE1=${LANG:0:2}
LANGUAGE2=${LANG:0:5}
EL=`echo $LANGUAGE1 | grep el`
EN=`echo $LANGUAGE1 | grep en`
HU=`echo $LANGUAGE1 | grep hu`
IT=`echo $LANGUAGE1 | grep it`
PL=`echo $LANGUAGE1 | grep pl`
PT=`echo $LANGUAGE1 | grep pt`
ZHCN=`echo $LANGUAGE2 | grep zh_CN`

