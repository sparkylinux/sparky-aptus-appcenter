#fi
#echo deb http://deb.debian.org/debian forky-backports main contrib non-free | tee /etc/apt/sources.list.d/debian-backports.list
#$SPARKYXTERM "apt-get update"
#$SPARKYXTERM "apt-get install -t forky-backports linux-image-rt-amd64 linux-headers-rt-amd64"
#
#$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL059"
#exit 0
#}

mainmenu
