	sed -i -e 's/$LANGTASK/icelandic/' /tmp/sparkylocale/sparky-locale-exe
	sed -i -e 's/$COUNTRY/is/' /tmp/sparkylocale/sparky-locale-exe
	sed -i -e 's/$IMG/is/' /tmp/sparkylocale/sparky-locale-exe
