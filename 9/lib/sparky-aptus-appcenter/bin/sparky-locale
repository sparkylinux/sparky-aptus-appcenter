	sed -i -e 's/$COUNTRY/csb/' /tmp/sparkylocale/sparky-locale-exe
	sed -i -e 's/$IMG/pl/' /tmp/sparkylocale/sparky-locale-exe
	;;
    Kazakh*)
	sed -i -e 's/$LANG/Kazakh/' /tmp/sparkylocale/sparky-locale-exe
