	;;
    Nepali*)
	sed -i -e 's/$LANG/Nepali/' /tmp/sparkylocale/sparky-locale-exe
	sed -i -e 's/$LANGTASK/nepali/' /tmp/sparkylocale/sparky-locale-exe
