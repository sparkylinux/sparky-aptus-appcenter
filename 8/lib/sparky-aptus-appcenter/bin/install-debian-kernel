# install i686 NON-PAE Debian kernel and headers
#$SPARKYXTERM "$UPDATE && $INSTALL linux-image-686 linux-headers-686"
#
#$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL059"
#exit 0
#}

